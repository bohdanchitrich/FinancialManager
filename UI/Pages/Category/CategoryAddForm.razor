@page "/category/add"

<h1 class="text-center text-muted">Add new category</h1>
<EditForm Model="CategoryAddModel" class="text-center" OnValidSubmit="HandleValidationRequestedAsync" >
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>

    <div class="mb-3 mt-3">
        <label for="@CategoryAddModel.Name" class="form-label">Name</label>
        <InputText @bind-Value="CategoryAddModel.Name" placeholder="Input name" class="form-control"></InputText>
    </div>
    <div class="mb-3">
        <label for="@CategoryAddModel.Description" class="form-label">Description</label>
        <InputTextArea @bind-Value="CategoryAddModel.Description" placeholder="Input description" class="form-control"></InputTextArea>
    </div>
    <div class="mb-3">
        <label for="@CategoryAddModel.FinancialType" class="form-label">Financial type</label>
        <InputSelect @bind-Value="CategoryAddModel.FinancialType" class="form-control">
            <option value="Income" >Income</option>
            <option value="Expense">Expense</option>
        </InputSelect>
    </div>
    <div class="mb-3">
        <label for="@CategoryAddModel.IsRegular" class="form-check-label">Regular</label>
        <InputCheckbox @bind-Value="CategoryAddModel.IsRegular" class="form-check-input"></InputCheckbox>
    </div>
    <button type="submit" class="btn btn-success">Send</button>
</EditForm>
@if (_errorMessage.Length > 0)
{
    <div class="alert alert-danger" role="alert">
        @_errorMessage
    </div>
}
